<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <!-- Github remote -->
    <remote name="github"
        fetch="https://github.com/" />

    
    <!-- Shamu Related thing -->
    <project path="device/moto/shamu" name="Hexa-Project-Device/android_device_moto_shamu" remote="github" revision="q" />
